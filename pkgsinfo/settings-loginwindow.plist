<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>autoremove</key>
	<false/>
	<key>display_name</key>
	<string>Settings: Login Window</string>
	<key>description</key>
	<string>Configure login windows to display name and password fields.</string>
	<key>catalogs</key>
	<array>
		<string>testing</string>
	</array>
	<key>installcheck_script</key>
	<string>#!/bin/sh

DesiredValue=1
CurrentValue=`/usr/bin/defaults read /Library/Preferences/com.apple.loginwindow SHOWFULLNAME`

if [ "$DesiredValue" = "$CurrentValue" ] ; then
	echo "Matches!"
	exit 1
else
	echo "Doesn't Match!"
	exit 0
fi
</string>
	<key>installer_type</key>
	<string>nopkg</string>
	<key>minimum_os_version</key>
	<string>10.8.0</string>
	<key>name</key>
	<string>setting-login-window</string>
	<key>postinstall_script</key>
	<string>#!/bin/sh

/usr/bin/defaults write /Library/Preferences/com.apple.loginwindow 
SHOWFULLNAME -bool "TRUE"

exit 1
</string>
	<key>unattended_install</key>
	<true/>
	<key>version</key>
	<string>1.0.0</string>
</dict>
</plist>

